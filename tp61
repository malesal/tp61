#include <bits/stdc++.h>
using namespace std;

bool Esgrito(string frase);
int main(){
string frase; 
cout<<"ingrese una frase: ";
getline(cin, frase);

while (getline(cin, frase)) { 
if (Esgrito(frase)) {
cout<<"ES GRITO";
}else {
 cout << "escrito" << endl; } 
}
return 0;
 }

bool Esgrito(string frase){
  int flag = 0;
  for (int i = 0; i < frase.length(); i++) { 
  char c = frase[i]; 
  if (c >= 'a' && c <= 'z') { 
  flag--; } 
  if (c == '!'){
   flag++; } 
	}
	 return flag;
}
